@model Services.Domain.Case.Case

@{
    ViewBag.Title = "title";
}

<h1>New case</h1>

@using (Html.BeginForm("NewCase", "Case", FormMethod.Post))
{

    <div class="form-group">
        <div class="form-control">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { required = "required" })
        </div>
    </div>
    <div class="form-group">
        <div class="form-control">

            @Html.LabelFor(m => m.Slug)
            @Html.TextBoxFor(m => m.Slug, new { required = "required" })

        </div>
    </div>


    <div class="form-group">
        <div class="form-control">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { required = "required" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="form-control">
            @Html.LabelFor(m => m.DownloadUrl)
            @Html.TextBoxFor(m => m.DownloadUrl, new { required = "required" })
        </div>
    </div>

    <input type="submit" class="btn btn-success" value="Create" />
}