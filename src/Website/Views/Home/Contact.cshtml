@model Website.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}



<div class="row">
    <div class="wrapper">
        <div class="col-md-12 col-sm-12 col-xs-12 section1-text">
            <h1>Contact us</h1>
            <p>Questions? Comments? Want to talk with us? You're of course welcome to contact us.</p>

            <form class="form-horizontal" id="contact-page" role="form" method="post" action="#">

                <div class="form-group">
                    <label for="email" class="col-md-12  col-sm-12 col-xs-12 control-label">E-mail:</label>
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <input type="text" class="form-control" id="email" name="email" placeholder="E-Mail address" value="">
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12"></div>
                </div>

                <div class="form-group">
                    <label for="message" class="col-md-12 col-sm-12 col-xs-12 control-label control-label-margin">Describe your project or situation:</label>
                    <div class="col-md-10 col-sm-12 col-xs-12">
                        <textarea class="form-control" rows="4" name="message" placeholder="Describe your project or situation"></textarea>
                    </div>
                    <div class="col-md-2 col-sm-12 col-xs-12"></div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <input id="submit" name="submit" type="submit" value="Start project" class="submit-btn-contact">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


