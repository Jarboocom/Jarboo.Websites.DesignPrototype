@using Website.Models.ExtensionMethods
@model List<Services.Domain.Pages.JarbooPage>

@if (Model.Count > 0)
{
    <div class="sidebar-holder">
        <h2 class="sidebar-title">Recently posts</h2>
        <ul class="list-unstyled recently-posts">
        @foreach (var post in Model)
        {
            <li>
                <h4>
                    @Html.ActionLink(post.Title, "Blog", new { controller = "Page", slug = post.Slug })
                </h4>
                <em>Published on @post.DateCreated.DisplayAsDate()</em>
            </li>
        }
        </ul>
    </div>
}
