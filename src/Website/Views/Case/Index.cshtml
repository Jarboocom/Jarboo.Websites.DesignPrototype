@using System.Web.UI.WebControls
@model Services.Domain.Case.Case

@{
    ViewBag.Title = Model.Title;
}


<div class="row single-case-study-top-view">
    <div class="wrapper">
        <div class="col-md-8 col-sm-12 col-xs-12 section1-text-white">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12 section1-text-white"></div>
    </div>
</div>

<div class="row single-case-study-line">
</div>

<div class="row single-case-study-bottom-view">
    <div class="wrapper">
        <div class="col-md-7 col-sm-12 col-xs-12 section1-text">
            <h2 class="black-text-case-study">@Model.LowerDescriptionHeadline</h2>
            <p>@Model.LowerDescriptionHeadline</p>
        </div>
        <div class="col-md-5 col-sm-12 col-xs-12 mail-box-case-study">
            <div class="col-md-12 col-sm-12 col-xs-12 download-background">
                <h2>Download this case study now:</h2>
            </div>
            <p>We will send you this guide to your mail so you can downalod it!</p>
            <!-- Begin MailChimp Signup Form -->
            <div id="mc_embed_signup">
                <form action="@Url.Action("Subscribe", "Home")" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <div class="mc-field-group">
                            <label for="email" class="col-md-12  col-sm-12 col-xs-12 control-label-case-study">E-mail:</label>
                            <input type="email" value="" name="EMAIL" class="required email mail-input" id="mce-EMAIL" placeholder="E-Mail address">
                        </div>
                        <div class="clear">
                            <input type="submit" value="GET CASE" name="subscribe" id="mc-embedded-subscribe" class="button get-case-button">
                            <input type="hidden" name="JarbooPlacement" id="JARBOO_PLA" value="@Model.DownloadUrl" />
                            <input type="hidden" name="redirectUrl" value="@Url.Action("ThankYou", "Home")" />
                            <input type="hidden" name="returnUrl" value="@Request.RawUrl" />
                            <!--Change the value of hidden field if you want to use this field somewhere else too-->
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="check-holder-case">
                    <p class="check-p"><img src="@Url.Content("~/assets/images/check.png")" class="chceck-img" alt="">Free ebook</p>
                    <p class="check-p"><img src="@Url.Content("~/assets/images/check.png")" class="chceck-img" alt="">No spam</p>
                </div>
            </div>
            <!--End mc_embed_signup-->
        </div>
    </div>
</div>


<div class="row CTA-section">
    <div class="CTA-wrapper">
        <div class="col-md-6 col-sm-12 col-xs-12 section1-text">
            <h2 class="CTA-h2">Solve your development:</h2>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12 CTA-buttons-CTA">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <button onclick="location.href ='@Url.Action("DiscussProject","Lead")'" class="CTA-button-full-CTA">DISCUSS A PROJECT</button>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                <button onclick="location.href='@Url.Action("Contact","Home")'" class="CTA-button-ghost-CTA">CONTACT US</button>
            </div>
        </div>
    </div>
</div>
