@model Services.Domain.Case.Case

@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="wrapper">
        <p class="section1-text"><a href="@Url.Action("References", "Home")">References</a> > @Model.Title</p>
        <div class="col-md-12 col-sm-12 col-xs-12 cs-page-case-study section1-text">
            <h1>@Model.Title</h1>
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>
<div class="row content-wrapper">

    <div class="col-md-8 col-sm-12 col-xs-12 mail-box-case-study">

        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
            <form action="//jarboo.us9.list-manage.com/subscribe/post?u=d7f26f1c6e2ffe07ab5b7efd5&amp;id=60e680a9bd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                    <div class="mc-field-group">
                        <input type="email" value="" name="EMAIL" class="required email mail-input" id="mce-EMAIL" placeholder="E-Mail address">
                    </div>
                    <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display: none"></div>
                        <div class="response" id="mce-success-response" style="display: none"></div>
                    </div>
                    <div style="position: absolute; left: -5000px;">
                        <input type="text" name="b_d7f26f1c6e2ffe07ab5b7efd5_60e680a9bd" tabindex="-1" value="">
                    </div>
                    <div class="clear">
                        <input type="submit" value="GET CASE" name="subscribe" id="mc-embedded-subscribe" class="button get-pdf-button">
                        <input type="hidden" name="JARBOO_PLA" id="JARBOO_PLA" value="@Model.DownloadUrl" />
                        <!--Change the value of hidden field if you want to use this field somewhere else too-->
                    </div>
                </div>
            </form>
        </div>
        <!--End mc_embed_signup-->


    </div>
</div>